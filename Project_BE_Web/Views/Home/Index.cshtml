            $.ajax({
                url:"/",
                data: {brand: brand},
                success: function (response) {
                    $("#list-product").html(response);
                }
            })
        })

         $(".product-dropdown-price").click(function () { 
            var price = $(this).text();
            $.ajax({
                url:"/",
                data: {price: price},
                success: function (response) {
                    $("#list-product").html(response);
                }
            })
        })

        $(".product-dropdown-sort").click(function () {
            var sort = $(this).text();
            $.ajax({
                url: "/",
                data: { sort: sort },
                success: function (response) {
                    $("#list-product").html(response);
                }
            })
        })

    </script>
}

        
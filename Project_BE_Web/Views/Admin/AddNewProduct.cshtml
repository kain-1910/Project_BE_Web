<body>
    <div class="container-fluid ">
        <div class="row">
            <div class="col-2">
                <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark">
                    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap" /></svg>
                        <span class="fs-4">Sidebar</span>
                    </a>
                    <hr>
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a href="#" class="nav-link active" aria-current="page">
                                <svg class="bi me-2" width="16" height="16"><use xlink:href="#home" /></svg>
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2" /></svg>
                                Dashboard
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                <svg class="bi me-2" width="16" height="16"><use xlink:href="#table" /></svg>
                                Orders
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid" /></svg>
                                Products
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle" /></svg>
                                Customers
                            </a>
                        </li>
                    </ul>
                    <hr>
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                            <strong>mdo</strong>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                            <li><a class="dropdown-item" href="#">New project...</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="adm-product-info">
                    <h5 class="adm-product-title">Thông tin sản phẩm</h5>
                    <form action="">
                        <div class="mb-3">
                            <label for="adm-pd-name" class="form-label">Tên</label>
                            <input type="text" class="form-control" id="adm-pd-name" placeholder="Nhập tên sản phẩm">
                        </div>
                        <div class="mb-3">
                            <label for="adm-pd-quantity" class="form-label">Số lượng</label>
                            <input type="text" class="form-control" id="adm-pd-quantity" placeholder="Nhập số lượng">
                        </div>

                        <div class="mb-3">
                            <label for="adm-pd-description" class="form-label">Mô tả</label>
                            <div class="adm-pd-btn form-control">
                                <span class="btn-font">
                                    Phông
                                    <i class="fa-solid fa-caret-down"></i>
                                </span>
                                <span class="btn-size">
                                    Cỡ chữ
                                    <i class="fa-solid fa-caret-down"></i>
                                </span>
                                <span><i class="fa-solid fa-bold"></i></span>
                                <span><i class="fa-solid fa-italic"></i></span>
                            </div>
                            <textarea class="form-control" id="adm-pd-description" rows="3"></textarea>
                        </div>

                    </form>
                </div>

                <div class="adm-product-info">
                    <h5 class="adm-product-title">Hình ảnh</h5>
                    <button class="btn btn-secondary">Chọn file</button>
                    <span>Không có file nào được chọn</span>
                    <div class="row row-cols-5">
                        <div class="col">
                            <button class="adm-product-show-img">
                                <div class="adm-product-img" style="background-image: url(../img/slider1.png);"></div>
                            </button>
                        </div>

                        <div class="col">
                            <button class="adm-product-show-img">
                                <div class="adm-product-img" style="background-image: url(../img/iphone_15.png);"></div>
                            </button>
                        </div>

                        <div class="col">
                            <button class="adm-product-show-img">
                                <div class="adm-product-img" style="background-image: url(../img/iphone_15.png);"></div>
                            </button>
                        </div>

                        <div class="col">
                            <button class="adm-product-show-img">
                                <div class="adm-product-img" style="background-image: url(../img/iphone_15.png);"></div>
                            </button>
                        </div>

                        <div class="col">
                            <button class="adm-product-show-img">
                                <div class="adm-product-img" style="background-image: url(../img/iphone_15.png);"></div>
                            </button>
                        </div>

                        <div class="col">
                            <button class="adm-product-show-img">
                                <div class="adm-product-img" style="background-image: url(../img/slider2.png);"></div>
                            </button>
                        </div>





                    </div>
                </div>
            </div>

            <div class="col-4">
                <div class="adm-product-info">
                    <h5 class="adm-product-title">Giá</h5>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="adm-pd-name" placeholder="Nhập giá sản phẩm">
                    </div>
                </div>

                <div class="adm-product-info">
                    <h5 class="adm-product-title">Giảm giá</h5>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="adm-pd-name" placeholder="Nhập giá sản phẩm">
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="adm-pd-date-start" class="form-label">Ngày bắt đầu</label>
                            <input type="date" class="form-control" placeholder="Ngày bắt đầu" aria-label="First name">
                        </div>
                        <div class="col">
                            <label for="adm-pd-date-end" class="form-label">Ngày kết thúc</label>
                            <input type="date" class="form-control" placeholder="Ngày kết thúc" aria-label="Last name">
                        </div>
                    </div>
                </div>

                <div class="adm-product-info">
                    <h5 class="adm-product-title">Danh mục</h5>
                    <div class="mb-3">
                        <select class="form-select" aria-label="Default select example">
                            <option selected>--chọn nhà sản xuất--</option>
                            <option value="1">Apple</option>
                            <option value="2">Sam Sung</option>
                            <option value="3">Oppo</option>
                        </select>
                    </div>

                </div>
                <div class="adm-product-info">
                    <h5 class="adm-product-title">Ảnh</h5>
                    <div class="adm-product-container-img">
                        <div class="adm-product-img" style="background-image: url(./img-pd-empty.png);"></div>

                    </div>
                </div>

                <div class="adm-product-info">
                    <button class="btn btn-success">Thêm sản phẩm</button>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

